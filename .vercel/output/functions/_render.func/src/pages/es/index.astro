---
import Layout from '@layouts/Layout.astro';
import Section1 from '@components/Section1.astro';
import Section2 from '@components/Section2.astro';
import Section3 from '@components/Section3.astro';
import Footer from '@components/Footer.astro';

// check if url is /es
const url = new URL(Astro.request.url);
const isES = url.pathname.includes("/es") ? true : false;
const language = isES ? "es" : "en"; 
---

<Layout>
	<Section1 language={language} />
	<Section2 language={language}/>
	<Section3 language={language}/>
	<Footer language={language}/>
</Layout>
