      transform: scaleX(0);
    }
    50% {
      transform: scaleX(100%);
    }
    80% {
      transform: translateX(80%);
    }
    100% {
      transform: translateX(100%);
    }
  }
</style>

<style>
  .image-dev {
    position: relative;
    text-align: center;
    line-height: 0;
    z-index: 2;
    width: 100%;
    top: 0;
    border-bottom: 1px solid #ffc107;
    border-top: 1px solid #ffc107;
    transform: translateY(-100%);
    animation: dev-slide-down 1s 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275)
      forwards;

    @media (max-width: 768px) {
      max-width: 100%;
    }
    & svg {
      max-width: 50vw;
      aspect-ratio: 375/150;
      fill: #F5ECD5;
      
      @media (max-width: 768px) {
        max-width: 100%;
        height: auto;
      }
    }
    & .letter{
      --translateY:0; 
      transform-origin: top center;

    } 
    & .letter.animated {
      animation: dev-letter 0.75s cubic-bezier(.36,.41,0,.66);
    }
  }
  @keyframes dev-slide-down {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(0%);
    }
  }
  @keyframes dev-letter {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(var(--translateY));
    }
    100% {
      transform: translateY(0);
    }
    
  }

</style>

<script>
  const letters = document.querySelectorAll(".letter");
  function animateLetter() {
    const letter = letters[Math.floor(Math.random() * letters.length)];
    const randomTime = Math.random() * (20000 - 5000) + 5000;
    const translateY = Math.floor(Math.random() * (95 - 45 + 1)) + 45;
    setTimeout(() => {
      (letter as HTMLElement).style.setProperty("--translateY", `${translateY}%`);
      letter.classList.add("animated");
      setTimeout(() => {
        letter.classList.remove("animated");
        animateLetter();
      }, 1700);
    }, randomTime);
  }

  document.addEventListener("DOMContentLoaded", () => {
    animateLetter();
  });
</script>