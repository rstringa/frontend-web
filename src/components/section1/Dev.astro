---
import devImage from "@assets/section1-dev.svg";
---

<img
  class="image-dev"
  src={devImage.src}
  alt="Dev"
  fetchpriority="high"
  loading="eager"
  height="224"
  width="100%"
/>
<div class="band"></div>


<style>
.band {
  width:100%;
  min-height: 10px;
  position: relative;
  z-index: 5;
  background-color: #111;
  transform-origin:left center;
  animation: elastic-band 3s 2s cubic-bezier(0.175, 0.885, 0.32, 1.275) both;
  @media (max-width: 768px) {
    min-height: 5px;
  }
}
  @keyframes elastic-band {
    0% {
      transform: scaleX(0);
      
    }
    50% {
      transform: scaleX(100%);
    }
    80%{
      transform: translateX(80%);
    }
    100%{
      transform: translateX(100%);
    }
  } 
</style>

<style>
  .image-dev {
    position: relative;
    z-index: 2;
    top: 0;
    max-width: 50vw;
    aspect-ratio: 375/150;
    transform: translateY(-100%);
    animation: dev-slide-down 1s 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275)
      forwards;
   
      @media (max-width: 768px) {
        max-width: 100%;
      }
  }
  @keyframes dev-slide-down {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(0%);
    }
  }
</style>
