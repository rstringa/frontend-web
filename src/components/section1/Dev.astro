<style>
  .band {
    width: 100%;
    min-height: 8px;
    position: relative;
    z-index: 5;
    background-color: #111;
    transform-origin: left center;
    animation: elastic-band 3s 2s cubic-bezier(0.175, 0.885, 0.32, 1.275) both;
